<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegisterUser2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Personal Details"
        android:textSize="32sp"
        android:layout_marginBottom="50sp"/>

    <EditText
        android:id="@+id/txt_register_firstname"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Enter First Name"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/txt_register_lastname"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Enter Last Name"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/txt_register_phone"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50sp"
        >

        <Button
            android:id="@+id/btn_register2_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:layout_marginRight="50sp"/>

        <Button
            android:id="@+id/btn_register2_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"/>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".EmployeeHome">


    <TextView
        android:layout_marginTop="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Menu"
        android:textSize="32sp"
        />

    <Button
        android:id="@+id/btn_employeehome_viewbookings"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="View Bookings"/>

    <Button
        android:id="@+id/btn_employeehome_newBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new service"/>

    <Button
        android:id="@+id/btn_employeehome_updateservices"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Update Services"/>

</LinearLayout>